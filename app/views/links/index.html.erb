<h1>Listing Links</h1>

<% @links.each do |link| %>
  <h2><%= link_to link.title, link %></h2>
  <p><%= link.url %></p>
  <p>
    <%= link_to "Show", link_path(link) %> |
    <% if link.user == current_user %>
      <%= link_to "Edit", edit_link_path(link) %> |
      <%= link_to "Delete", link, :confirm => "Are you sure?", :method => :delete %>
    <% end %>
  </p>
  <hr />
<% end %>
